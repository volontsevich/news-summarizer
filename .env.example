TELEGRAM_RATE_LIMIT_SLEEP=1.2

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=tgnews
POSTGRES_DB=tgnews
